@model CarDealership.Models.Vehicle

@{
    Layout = "_Layout";
}

<h1 class="col-lg-offset-2">Car Entry Form</h1>
<body>
    <div class="panel-body col-lg-offset-4 col-lg-4">
        <form asp-action="CarEntry" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Year">Vehicle Year:</label>
                <input class="form-control" asp-for="Year" />
             </div>
            <div class="form-group">
                <label asp-for="Make">Vehicle Make</label>
                <input class="form-control" asp-for="Make" />
            </div>
            <div class="form-group">
                <label asp-for="Model">Vehicle Model:</label>
                <input class="form-control" asp-for="Model" />
            </div>
            <div class="form-group">
                <label asp-for="Mileage">Vehicle Mileage:</label>
                <input class="form-control" asp-for="Mileage" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary btn-sm" type="submit">Add Vehicle</button>
            </div>
        </form>
    </div>
</body>

